@page
@model WebJob.Pages.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>JobInfo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="JobInfo.Id" />
            <div class="form-group">
                <label asp-for="JobInfo.Name" class="control-label"></label>
                <input asp-for="JobInfo.Name" class="form-control" />
                <span asp-validation-for="JobInfo.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JobInfo.NextRun" class="control-label"></label>
                <input asp-for="JobInfo.NextRun" class="form-control" />
                <span asp-validation-for="JobInfo.NextRun" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JobInfo.Parameters" class="control-label"></label>
                <input asp-for="JobInfo.Parameters" class="form-control" />
                <span asp-validation-for="JobInfo.Parameters" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="JobInfo.Active" /> @Html.DisplayNameFor(model => model.JobInfo.Active)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="JobInfo.Blocking" /> @Html.DisplayNameFor(model => model.JobInfo.Blocking)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
